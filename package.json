{
  "name": "@eliasku/ts-libs",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "solution:rebuild": "pnpm clean -r && tsc -b -v tsconfig.solution.json",
    "solution:watch": "pnpm clean -r && tsc -b -w -v tsconfig.solution.json",
    "upgrade": "pnpm update -L -i -r",
    "release": "multi-semantic-release"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.13",
    "pnpm": "^5.5.10",
    "prettier": "^2.1.1",
    "prettier-plugin-package": "^1.0.0",
    "rimraf": "^3.0.2",
    "toolchain": "workspace:0.0.1",
    "typescript": "^4.0.2",
    "@qiwi/multi-semantic-release": "^3.8.3",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.0.7",
    "@semantic-release/npm": "^7.0.5",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "semantic-release": "^17.1.1",
    "jest": "^26.4.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{json,md,yaml,yml}": "prettier --write"
  },
  "jest": {
    "collectCoverage": true,
    "projects": [
      "<rootDir>/packages/fast-math/jest.config.js"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
