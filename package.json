{
  "name": "@eliasku/ts-libs",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build:solution": "pnpm clean -r && tsc -b -v tsconfig.solution.json",
    "watch:solution": "pnpm clean -r && tsc -b -w -v tsconfig.solution.json",
    "upgrade": "pnpm update -L -i -r",
    "release": "changeset publish",
    "version": "changeset version && pnpm update-lock",
    "update-lock": "pnpm -r i --frozen-lockfile=false && git add pnpm-lock.yaml",
    "test:ci": "jest",
    "coveralls": "coveralls < coverage/lcov.info"
  },
  "devDependencies": {
    "@changesets/cli": "^2.10.2",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "pnpm": "^5.5.11",
    "prettier": "^2.1.1",
    "prettier-plugin-package": "^1.0.0",
    "rimraf": "^3.0.2",
    "toolchain": "workspace:*",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{json,md,yaml,yml}": "prettier --write"
  },
  "jest": {
    "collectCoverage": true,
    "projects": [
      "<rootDir>/packages/fast-math/jest.config.js",
      "<rootDir>/packages/binpack/jest.config.js"
    ]
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "toolchain"
  ]
}
